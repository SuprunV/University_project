@{
    var sessionRollText = !string.IsNullOrEmpty(Model.SessionRoll) ? $"({Model.SessionRoll})" : "";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">University Log in</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if(!string.IsNullOrEmpty(@Model.SessionUserName) || @Model.SessionRoll == "admin") {
                        @foreach(var item in Model.AccessRights) {
                            @if(Convert.ToBoolean(item.Value["showInHeader"][0])) {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="@item.Value["path"][0]" asp-page-handler="Index">@item.Value["name"][0]</a>
                                </li>
                            }
                        }
                    }
                </ul>
                @Model.SessionUserName - @Model.SessionRoll
            </div>
        </div>
    </nav>
</header>


